<!DOCTYPE html>
<html>
  <head>
    <title><%=h @details['name'] %></title>
  </head>
  <body>
    <h1><%=h @details['name'] %></h1>
    <table border="1">
      <tbody>
        <tr>
          <td>Model</td>
          <td><%=h @details['model']%></td>
        </tr>
        <tr>
          <td>Manufacturer</td>
          <td><%=h @details['manufacturer'] %></td>
        </tr>
        <tr>
          <td>Cost in credits</td>
          <td><%=h @details['cost_in_credits'] %></td>
        </tr>
        <tr>
          <td>Length</td>
          <td><%=h @details['length'] %></td>
        </tr>
        <tr>
          <td>Max atmosphering speed</td>
          <td><%=h @details['max_atmosphering_speed'] %></td>
        </tr>
        <tr>
          <td>Crew</td>
          <td><%=h @details['crew'] %></td>
        </tr>
        <tr>
          <td>Passengers</td>
          <td><%=h @details['passengers'] %></td>
        </tr>
        <tr>
          <td>Cargo capacity</td>
          <td><%=h @details['cargo_capacity'] %></td>
        </tr>
        <tr>
          <td>Consumables</td>
          <td><%=h @details['consumables'] %></td>
        </tr>
        <tr>
          <td>Hyperdrive rating</td>
          <td><%=h @details['hyperdrive_rating'] %></td>
        </tr>
        <tr>
          <td>MGLT</td>
          <td><%=h @details['MGLT'] %></td>
        </tr>
        <tr>
          <td>Starship class</td>
          <td><%=h @details['starship_class'] %></td>
        </tr>
        <tr>
          <td>Films</td>
          <td>
            <table border="1" width="100%">
              <% @details['films'].each do |film| %>
                <tr>
                  <td><%= link_to api_call(film, false), "../films/#{get_id(film)}" %></td>
                </tr>
              <% end %>
            </table>
          </td>
        </tr>
        <tr>
          <td>Pilots</td>
          <td>
            <table border="1" width="100%">
              <% @details['pilots'].each do |pilot| %>
                <tr>
                  <td><%= link_to api_call(pilot, true), "../ships/#{get_id(pilot)}" %></td>
                </tr>
              <% end %>
            </table>
          </td>
        </tr>
      </tbody>
    </table>
  </body>
</html>
