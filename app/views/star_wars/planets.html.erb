<!DOCTYPE html>
<html>
  <head>
    <title><%=h @details['name'] %></title>
  </head>
  <body>
    <h1><%=h @details['name'] %></h1>
    <table border="1">
      <tbody>
        <tr>
          <td>Rotation period</td>
          <td><%=h @details['rotation_period']%></td>
        </tr>
        <tr>
          <td>Orbital period</td>
          <td><%=h @details['orbital_period'] %></td>
        </tr>
        <tr>
          <td>Diameter</td>
          <td><%=h @details['diameter'] %></td>
        </tr>
        <tr>
          <td>Climate</td>
          <td><%=h @details['climate'] %></td>
        </tr>
        <tr>
          <td>Gravity</td>
          <td><%=h @details['gravity'] %></td>
        </tr>
        <tr>
          <td>Terrain</td>
          <td><%=h @details['terrain'] %></td>
        </tr>
        <tr>
          <td>Surface water</td>
          <td><%=h @details['surface_water'] %></td>
        </tr>
        <tr>
          <td>Population</td>
          <td><%=h @details['population'] %></td>
        </tr>
        <tr>
          <td>Films</td>
          <td>
            <table border="1" width="100%">
              <% @details['films'].each do |film| %>
                <tr>
                  <td><%= link_to api_call(film, false), "../films/#{get_id(film)}" %></td>
                </tr>
              <% end %>
            </table>
          </td>
        </tr>
        <tr>
          <td>Residents</td>
          <td>
            <table border="1" width="100%">
              <% @details['residents'].each do |resident| %>
                <tr>
                  <td><%= link_to api_call(resident, true), "../characters/#{get_id(resident)}" %></td>
                </tr>
              <% end %>
            </table>
          </td>
        </tr>
      </tbody>
    </table>
  </body>
</html>
