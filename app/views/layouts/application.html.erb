<!DOCTYPE html>
<html>
  <head>
    <title>Tarea 1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= simple_form_for :search, url: "../search", method: "GET", html: { class: 'form-inline' } do |f| %>
      <%= f.input :name, input_html: {value: ""}, label: false %>
      <%= f.submit "Search", class: "btn btn-primary" %>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
