<!DOCTYPE html>
<html>
  <head>
    <title>Tarea 1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <div class="row">
      <div class="col-sm-1">
        <h2><%= link_to "Inicio", root_path %></h2>
      </div>
      <div class="col-sm-6">
        <%= simple_form_for :search, url: "../search", method: "GET", html: { class: 'form-inline' } do |f| %>
          <%= f.input :name, input_html: {value: ""}, label: false %>
          <%= f.submit "Search", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
